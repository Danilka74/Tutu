<h1>Здесь все Станции</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.title %></td>
        <td><%= link_to 'Показать', station %></td>
        <td><%= link_to 'Редактировать', edit_station_path(station) %></td>
        <td><%= link_to 'Удалить', station, method: :delete, data: {confirm: 'Вы уверены?'} %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

<br>

<%= link_to 'Добавить станцию', new_station_path %>